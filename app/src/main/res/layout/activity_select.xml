                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="415dp"
                android:fontFamily="@font/lato_bold"
                android:text="Today:"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/noPhoneScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="540dp"
                android:fontFamily="@font/lato_bold"
                android:text="Today:"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cultureScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="665dp"
                android:fontFamily="@font/lato_bold"
                android:text="Today:"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/runningCompleteTag"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="115dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tag_complete" />

            <ImageView
                android:id="@+id/runningIncompleteTag"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="115dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tag_incomplete" />

            <ImageView
                android:id="@+id/cyclingCompleteTag"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="240dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tag_complete" />

            <ImageView
                android:id="@+id/cyclingIncompleteTag"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="240dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tag_incomplete" />

            <ImageView
                android:id="@+id/pushUpsCompleteTag"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="365dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tag_complete" />

            <ImageView
                android:id="@+id/pushUpsIncompleteTag"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="365dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tag_incomplete" />

            <ImageView
                android:id="@+id/noPhoneCompleteTag"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="490dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tag_complete" />

            <ImageView
                android:id="@+id/noPhoneIncompleteTag"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="490dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tag_incomplete" />

            <ImageView
                android:id="@+id/cultureCompleteTag"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="615dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tag_complete" />

            <ImageView
                android:id="@+id/cultureIncompleteTag"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="615dp"
                android:layout_marginEnd="25dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tag_incomplete" />

            <Button
                android:id="@+id/runningButton"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="100dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent"
                android:focusable="false"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cyclingButton"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="225dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent"
                android:focusable="false"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/pushUpsButton"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="350dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent"
                android:focusable="false"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/noPhoneButton"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="475dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent"
                android:focusable="false"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cultureButton"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="600dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent"
                android:focusable="false"
                android:clickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>